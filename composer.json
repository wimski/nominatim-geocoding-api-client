{
    "name": "wimski/nominatim-geocoding-api-client",
    "description": "PHP client for the Nominatim geocoding API",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "wimski",
        "nominatim",
        "geocoding",
        "forward",
        "reverse",
        "api",
        "client"
    ],
    "authors": [
        {
            "name": "Wim Reckman",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/wimski/nominatim-geocoding-api-client",
    "require": {
        "php": "^8.0",
        "myclabs/php-enum": "^1.8",
        "php-http/discovery": "^1.13",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Wimski\\Nominatim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wimski\\Nominatim\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
